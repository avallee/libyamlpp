# the /lib project is an alias for the src project, and /demo is for src/demo
use-project /lib : src ;
use-project /demo : demo ;

# the /demo//demo-libyaml++ target is also known as the demo target
alias demo : /demo//demo-libyaml++ ;

# only build the demo-libyaml++ target if explicitly asked to
explicit demo ;

alias check : test//check ;
explicit check ;

alias yaml++ : /lib//yaml++ ;

# build our projects
build-project /lib ;
